{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": ""
  },

  "Jwt": {
    "Issuer": "MeepleBoard.com",
    "Audience": "MeepleBoard.com",
    "ExpiryHours": 24
  },

  "Authentication": {
    "Google": {
      "ClientId": "",
      "ClientSecret": ""
    },
    "Apple": {
      "ClientId": "",
      "KeyId": "",
      "TeamId": "",
      "ClientSecret": ""
    }
  },

  "Brevo": {
    "ApiKey": ""
  },

  "EmailSettings": {
    "SendinblueApiKey": ""
  },

  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "RealIpHeader": "X-Forwarded-For",
    "ClientIdHeader": "X-UserId",
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "POST:/MeepleBoard/auth/login",
        "Period": "10m",
        "Limit": 5,
        "PermitLimit": 10,
        "SuspensionPeriod": "30m"
      },
      {
        "Endpoint": "POST:/MeepleBoard/auth/register",
        "Period": "1h",
        "Limit": 10
      },
      {
        "Endpoint": "POST:/MeepleBoard/auth/resetpassword",
        "Period": "10m",
        "Limit": 3
      },
      {
        "Endpoint": "GET:/MeepleBoard/auth/confirmemail",
        "Period": "30m",
        "Limit": 5
      }
    ]
  }
}
